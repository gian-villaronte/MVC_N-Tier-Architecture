@model List<Global.Entity.Category>

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h2>Categories Listing</h2>
        </div>
        <table class="table table-bordered table-striped">
            <thead class="bg-dark text-white">
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>DisplayOrder</td>
                    <td>CreatedDateTime</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.DisplayOrder</td>
                        <td>@category.CreatedDateTime</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>